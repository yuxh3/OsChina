<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:background="#fff">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divider ="@color/main_green"
        android:orientation = "vertical"
        app:showDividers ="middle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_quest_nor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drawer_menu_icon_quest_nor"/>
            <TextView
                android:layout_toRightOf="@id/iv_quest_nor"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技术问答"
                android:textSize="15sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_opensoft_nor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drawer_menu_icon_opensoft_nor"/>
            <TextView
                android:layout_toRightOf="@id/iv_opensoft_nor"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开源软件"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_blog_nor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drawer_menu_icon_blog_nor"/>
            <TextView
                android:layout_toRightOf="@id/iv_blog_nor"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="博客区"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_gitapp_nor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drawer_menu_icon_gitapp_nor"/>
            <TextView
                android:layout_toRightOf="@id/iv_gitapp_nor"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Git客户端"
                android:textSize="15sp"/>
        </RelativeLayout>

    </android.support.v7.widget.LinearLayoutCompat>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_setting_nor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drawer_menu_icon_setting_nor"/>
            <TextView
                android:layout_toRightOf="@id/iv_setting_nor"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/rl_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_exit_nor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drawer_menu_icon_exit_nor"/>
            <TextView
                android:layout_toRightOf="@id/iv_exit_nor"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>